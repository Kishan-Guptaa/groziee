<% layout("/layouts/boilerplate") %>

<!-- Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<!-- Styles -->
<style>
  body {
    font-family: 'Inter', sans-serif;
    background-color: #f8f9fb;
    color: #1f2937;
    font-size: 0.93rem;
  }

  .product-wrapper {
    padding: 56px 20px 40px; /* top padding increased for space from navbar */
  }

  .section {
    background-color: #ffffff;
    border-radius: 14px;
    padding: 24px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.03);
    margin-top: 20px;
  }

  .product-title {
    font-size: 1.65rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 8px;
  }

  .price-box {
    font-size: 1.4rem;
    font-weight: 600;
    color: #047857;
  }

  .price-box del {
    color: #9ca3af;
    font-size: 1rem;
    margin-left: 6px;
  }

  .btn-buy {
    background-color: white !important;
    color: #198754 !important;
    font-weight: 600;
    padding: 10px 10px !important;
    font-size: 0.95rem;
    border-radius: 10px;
    border: 1px solid #007b5e !important;
  }

  .btn-buy:hover {
    background-color: #007b3d !important;
    color:white !important ;
  }

  .thumbnail-group img {
    width: 56px;
    height: 56px;
    object-fit: contain;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 4px;
  }

  .highlight {
    background-color: #f1f5f9;
    border-radius: 10px;
    padding: 10px 16px;
    font-size: 0.85rem;
    color: #111827;
  }

  .info-label {
    font-weight: 600;
    color: #374151;
    font-size: 1rem;
  }

  .meta-list li {
    margin-bottom: 4px;
    font-size: 0.88rem;
    color: #4b5563;
  }

  .why-section h4 {
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 1.2rem;
  }

   .why-section {
    margin-top: 3rem;
  }

  .why-box {
    background-color: #ffffff;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.05);
    height: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .why-box img {
    height: 60px;
    width: 60px;
    object-fit: contain;
    margin: 0 auto 1rem;
  }

  .why-box h6 {
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .why-box p {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0;
  }

  @media (max-width: 767px) {
    .why-box {
      padding: 16px;
    }

    .why-box img {
      height: 50px;
      width: 50px;
    }
  }
</style>

<div class="container product-wrapper">
  <div class="row g-4">
    <!-- Product Image Section -->
    <div class="col-md-5">
      <div class="section text-center">
        <img src="<%= product.imageUrl || '/images/default.jpg' %>" alt="<%= product.title %>"
          class="img-fluid rounded mb-3" style="max-height: 300px; object-fit: contain;" />
        <div class="d-flex justify-content-center gap-2 thumbnail-group">
          <% for (let i = 0; i < 4; i++) { %>
            <img src="<%= product.imageUrl || '/images/default.jpg' %>" alt="thumb">
          <% } %>
        </div>
      </div>
    </div>

    <!-- Product Info Section -->
    <div class="col-md-7">
      <div class="section">
        <small class="text-muted d-block mb-1"><%= product.category?.name || 'Category' %></small>
        <h1 class="product-title"><%= product.title %></h1>

        <!-- Price -->
        <div class="mb-2">
          <% if (product.discountPrice) { %>
            <div class="price-box">
              â‚¹<%= product.discountPrice %> <del>â‚¹<%= product.price %></del>
            </div>
          <% } else { %>
            <div class="price-box text-dark">â‚¹<%= product.price %></div>
          <% } %>
          <div><small class="text-muted"><%= product.quantity || "1 unit" %></small></div>
        </div>

        <!-- Add to Cart -->
        <form action="/add-to-cart/<%= product._id %>" method="POST" class="mt-2">
          <button type="submit" class="btn btn-buy">ðŸ›’ Add to Cart</button>
        </form>

        <!-- Highlights -->
        <div class="d-flex gap-3 mt-3">
          <div class="highlight"><strong>Type:</strong> Grocery Item</div>
          <div class="highlight"><strong>Quantity:</strong> <%= product.quantity || "â€”" %></div>
        </div>

        <!-- Description -->
        <div class="mt-4">
          <h5 class="info-label mb-2">Product Description</h5>
          <p class="text-muted"><%= product.description || "No description available." %></p>
        </div>

        <!-- Manufacturer Info -->
        <div class="mt-3">
          <h5 class="info-label mb-2">Manufacturer Info</h5>
          <ul class="list-unstyled meta-list">
            <li><strong>Seller:</strong> <%= product.sellerName || "N/A" %></li>
            <li><strong>Address:</strong> <%= product.sellerAddress || "N/A" %></li>
            <li><strong>MFD:</strong> <%= product.manufactureDate?.toDateString() || "N/A" %></li>
            <li><strong>Expiry:</strong> <%= product.expiryDate?.toDateString() || "N/A" %></li>
            <li><strong>Disclaimer:</strong> <%= product.disclaimer || "None" %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Why Shop From Section -->
  <div class="row mt-5 gy-4 why-section">
    <h4 class="text-center">Why Shop from Groozie?</h4>
    <div class="col-md-4">
      <div class="why-box">
        <img src="/images/icons/fast-delivery.jpg" alt="Fast Delivery" />
        <h6>Superfast Delivery</h6>
        <p>Groceries delivered in under 10 minutes.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="why-box">
        <img src="/images/icons/price-tag.jpg" alt="Best Prices" />
        <h6>Best Prices & Offers</h6>
        <p>Exclusive deals from trusted sellers.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="why-box">
        <img src="/images/icons/product-range.jpg" alt="Wide Assortment" />
        <h6>Wide Assortment</h6>
        <p>Over 5000+ daily essentials in one place.</p>
      </div>
    </div>
  </div>
</div>
